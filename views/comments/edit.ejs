<%- include("../partials/header") %>

   <div class="container">
      <div class="bg-light p-3 mt-5 ">
         <div>
            <h1 style=" text-align: center;"> Edit Comment of <%= touristHub.name %> TouristHub</h1>
         </div>
         <div style="width: 60%; margin: 25px auto;">
            <form action="/touristHubs/<%= touristHub._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
               <div class="form-group">
                  <input class="form-control form-control-lg" type="test" name="comment[text]"
                     value="<%= comment.text %>">
               </div>
               <div class="form-group">
                  <button class="btn btn-primary btn-lg btn-block">Submit</button>
               </div>
               <a class="btn btn-dark" href="/touristHubs/<%= touristHub._id %>">Go back</a>
            </form>
         </div>
      </div>
   </div>

   <%- include("../partials/footer") %>