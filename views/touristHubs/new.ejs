<%- include("../partials/header") %>

   <div class="container">
      <div class="bg-light pb-1">
         <div>
            <h1 class="text-info" style="text-align: center;"> Create a New TouristHub</h1>
         </div>
         <div style="width: 60%; margin: 25px auto;">
            <form action="/touristHubs" method="POST">
               <div class="row">
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="test" name="name" placeholder="name" required>
                  </div>
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="text" name="image" placeholder="image URL"
                        required>
                  </div>
               </div>
               <div class="row">
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="text" name="location" placeholder="Location"
                        required>
                  </div>
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="number" name="price"
                        placeholder="Price(in Rupees)" required>
                  </div>
               </div>
               <div class="form-group">
                  <textarea rows="5" class="form-control form-control-lg" type="text" name="description"
                     placeholder="Description" required></textarea>
               </div>
               <div class="form-group">
                  <button class="btn btn-primary btn-lg btn-block">Submit</button>
               </div>
            </form>
            <a href="/touristHubs"><button class="btn btn-dark">Go back</button></a>
         </div>
      </div>
   </div>

   <%- include("../partials/footer") %>