<%- include("../partials/header") %>

   <div class="container">
      <div class="bg-light p-1">
         <div>
            <h1 class="text-info" style="text-align: center;"> Edit <%=touristHub.name%> TouristHub</h1>
         </div>
         <div style="width: 60%; margin: 25px auto;">
            <form action="/touristHubs/<%=touristHub._id%>?_method=PUT" method="POST">
               <div class="row">
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="text" name="touristHub[name]"
                        value="<%=touristHub.name%>" placeholder="name" required>
                  </div>
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="text" name="touristHub[image]"
                        value="<%=touristHub.image%>" placeholder="image URL" required>
                  </div>
               </div>
               <div class="row">
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="text" name="touristHub[location]"
                        value="<%=touristHub.location%>" placeholder="Location" required>
                  </div>
                  <div class="form-group col">
                     <input class="form-control form-control-lg" type="number" name="touristHub[price]"
                        value="<%=touristHub.price%>" placeholder="Price(in Rupees)" required>
                  </div>
               </div>
               <div class="form-group">
                  <textarea rows="5" class="form-control form-control-lg" type="text" name="touristHub[description]"
                     placeholder="Description" required><%=touristHub.description%></textarea>
               </div>
               <div class="form-group">
                  <button class="btn btn-primary btn-lg btn-block">Submit</button>
               </div>
            </form>
            <a href="/touristHubs/<%=touristHub._id%>">
               <button class="btn btn-dark"> Go back </button>
            </a>
         </div>
      </div>
   </div>

   <%- include("../partials/footer") %>